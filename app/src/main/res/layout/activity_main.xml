<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shalvahadebayo.xodroid.MainActivity">


    <GridLayout
        android:id="@+id/board_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <ImageButton
            android:id="@+id/tile_img_00"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_row="0"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_01"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="1"
            android:layout_row="0"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_02"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="2"
            android:layout_row="0"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_10"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_row="1"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_11"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="1"
            android:layout_row="1"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_12"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="2"
            android:layout_row="1"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_20"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_row="2"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_21"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="1"
            android:layout_row="2"
            android:scaleType="center"
            android:src="@drawable/droid"/>

        <ImageButton
            android:id="@+id/tile_img_22"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="2"
            android:layout_row="2"
            android:scaleType="center"
            android:src="@drawable/droid"/>
    </GridLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/board_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="@string/xturn"
        android:textColor="@color/colorX"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/board_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:textSize="22sp"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="reset"
        android:padding="8dp"
        android:text="@string/reset"
        android:textColor="@android:color/white"
        android:textSize="22sp"/>
</RelativeLayout>
